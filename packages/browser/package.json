{
  "name": "@datadog/openfeature-browser",
  "version": "0.1.0-alpha.3",
  "description": "Browser-specific bindings for OpenFeature (wraps @datadog/openfeature-core)",
  "license": "MIT",
  "homepage": "https://github.com/DataDog/openfeature-js-client#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DataDog/openfeature-js-client.git",
    "directory": "packages/browser"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "cjs/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepack": "yarn build",
    "pack": "yarn pack",
    "build": "run-p build:cjs build:esm build:bundle",
    "build:bundle": "rm -rf bundle && SDK_SETUP=cdn webpack --mode=production",
    "build:cjs": "rm -rf cjs && tsc -p tsconfig.cjs.json && yarn replace-build-env cjs",
    "build:esm": "rm -rf esm && tsc -p tsconfig.esm.json && yarn replace-build-env esm",
    "replace-build-env": "node ../../scripts/build/replace-build-env.js",
    "clean": "rm -rf dist cjs esm bundle",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@datadog/flagging-core": "workspace:*",
    "@openfeature/core": "^1.8.1",
    "@openfeature/web-sdk": "^1.5.0"
  },
  "devDependencies": {
    "@datadog/browser-core": "^6.10.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^20.0.0",
    "jest": "^30.0.4",
    "jest-util": "^30.0.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "@datadog/browser-core": "0.1.0-alpha.3"
  }
}
